<div class="clearfix">
  <%= form.label :name %>
  <div class="input">
    <%= form.text_field :name %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :title %>
  <div class="input">
    <%= form.text_field :title %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :value_type %>
  <div class="input">
    <%= form.select :value_type, Option::Type.options.to_a %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :required %>
  <div class="input">
    <%= form.check_box :required %>
    <span>Required?</span>
  </div>
</div>

<div class="clearfix">
  <%= form.label :overridable %>
  <div class="input">
    <%= form.check_box :overridable %>
    <span>Overridable?</span>
  </div>
</div>
