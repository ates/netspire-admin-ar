<div class="clearfix">
  <%= form.label :name %>
  <div class="input">
    <%= form.text_field :name, :autofocus => true %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :title %>
  <div class="input">
    <%= form.text_field :title, :size => 20 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :description %>
  <div class="input">
    <%= form.text_area :description, :cols => 60, :rows => 10 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :active %>
  <div class="input">
    <%= form.check_box :active %> Yes, make it active and available
  </div>
</div>
