<div class="clearfix">
  <%= form.label :domain %>
  <div class="input">
    <%= form.collection_select :domain_id, Domain.all, :id, :title, {} %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :first_name %>
  <div class="input">
    <%= form.text_field :first_name, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :last_name %>
  <div class="input">
    <%= form.text_field :last_name, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :middle_name %>
  <div class="input">
    <%= form.text_field :middle_name, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :login %>
  <div class="input">
    <%= form.text_field :login, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :password %>
  <div class="input">
    <%= form.password_field :password %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :balance %>
  <div class="input">
    <%= form.text_field :balance, :size => 10 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :active %>
  <div class="input">
    <%= form.check_box :active %>
    <span>Yes, serve this account</span>
  </div>
</div>
