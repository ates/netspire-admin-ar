<div class="clearfix">
    <%= form.label :name %>
    <div class="input">
        <%= form.text_field :name, :size => 30, :autofocus => "autofocus" %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :cycle_type %>
    <div class="input">
        <%= form.select :cycle_type, BillingCycle::Type.options.to_a %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :unit %>
    <div class="input">
        <%= form.select :unit, BillingCycle::Unit.options.to_a, :include_blank => true %>
        <span class="help-inline">Specify unit if this is a fixed length cycle.</span>
    </div>
</div>

<div class="clearfix">
    <%= form.label :length %>
    <div class="input">
        <%= form.text_field :length %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :smooth %>
    <div class="input">
        <%= form.check_box :smooth %>
        <span class="help-inline">Normalize length. For example monthly cycles are expires at end of the month.</span>
    </div>
</div>
