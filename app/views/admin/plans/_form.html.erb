<div class="clearfix">
    <%= form.label :name %>
    <div class="input">
        <%= form.text_field :name, :autofocus => "autofocus" %>
    </div>
</div>

<div class="clearfix">
    <%= form.label :code %>
    <div class="input">
        <%= form.text_field :code, :size => 20 %>
        <span class="help-inline">For internal use by Netspire modules</span>
    </div>
</div>

<div class="clearfix">
    <%= form.label :active %>
    <div class="input">
        <%= form.check_box :active %> Yes, make it active and available
    </div>
</div>

<% unless form.object.new_record? %>
    <div class="clearfix">
      <%= form.label :legacy %>
      <div class="input">
        <%= form.check_box :legacy %> Yes, disable new subscriptions
    </div>
</div>
<% end %>

<div class="clearfix">
    <%= form.label :expires_at %>
    <div class="input">
        <%= form.text_field :expires_at, :id => "DateTime" %>
</div>
