<% if form.object.new_record? %>
    <div class="clearfix">
        <%= form.label :service_id %>
        <div class="input">
            <%= form.collection_select(:service_id, Service.all, :id, :title, :include_blank => true) %>
        </div>
    </div>

    <div class="clearfix">
        <%= form.label :billing_cycle_id %>
        <div class="input">
            <%= form.collection_select(:billing_cycle_id, BillingCycle.all, :id, :name, :include_blank => true) %>
        </div>
    </div>
<% else %>
    <div class="clearfix">
        <%= form.label :billing_cycle_id %>
        <div class="input">
            <%= form.object.billing_cycle.name %>
        </div>
    </div>
<% end %>

<div class="cleafix">
    <%= form.label :setup_fee %>
    <div class="input">
        <%= form.text_field(:setup_fee) %>
    </div>
</div>

<div class="cleafix">
    <%= form.label :periodic_fee %>
    <div class="input">
        <%= form.text_field(:periodic_fee) %>
    </div>
</div>

<div class="cleafix">
    <%= form.label :charge_mode %>
    <div class="input">
        <%= form.select(:charge_mode, AssignedService::ChargeMode.options.to_a) %>
    </div>
</div>

<div style="float: right">
  <% unless form.object.new_record? %>
    <table>
      <tbody>
        <%= properties_fields(form) %>
      </tbody>
    </table>
  <% end %>
</div>
<div style="clear: left"></div>
