<% content_for :sidebar do %>
  <h5><%= link_to 'Create an admin account', new_admin_admin_path %></h5>
<% end %>

<script >
  $(function() {
    $("table#accountsTable").tablesorter({ sortList: [[0,0]] });
  });
</script>

<table class="zebra-striped" id="accountsTable">
  <thead>
    <tr>
      <th class="yellow header headerSortDown">Login</th>
      <th class="blue header">Email</th>
      <th class="green header">Active</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= link_to admin.login, edit_admin_admin_path(admin) %></td>
        <td><%= admin.email %></td>
        <td><%= tick_or_cross(admin.active) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@admins) %>
