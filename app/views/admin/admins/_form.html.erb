<div class="clearfix">
  <%= form.label :domain %>
  <div class="input">
    <%= form.collection_select :domain_id, Domain.all, :id, :title, {} %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :login %>
  <div class="input">
    <%= form.text_field :login, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :email %>
  <div class="input">
    <%= form.email_field :email, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :password %>
  <div class="input">
    <%= form.text_field :password, :size => 30,
      :id => "password_field",
      :disabled => true,
      :value => "Encrypted" %>
    <%= link_to "Reset by new one", "#", :id => "password_enable" %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :authentication_token %>
  <div class="input">
    <span id="auth_token" class="uneditable-input">
      <%= @admin.authentication_token %>
    </span>
    <%= link_to "Reset authentication token",
      reset_auth_token_admin_admin_path(@admin),
      :remote => true,
      "data-confirm" => "Are you sure to reset authentication token?" %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :active %>
  <div class="input">
    <%= form.check_box :active %>
    <span>Yes, admin account is active</span>
  </div>
</div>
