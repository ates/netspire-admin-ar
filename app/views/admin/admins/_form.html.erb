<div class="clearfix">
  <%= form.label :login %>
  <div class="input">
    <%= form.text_field :login, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :email %>
  <div class="input">
    <%= form.text_field :email, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :password %>
  <div class="input">
    <%= form.text_field :password, :size => 30,
      :id => "password_field",
      :disabled => true %>
    <%= link_to "Reset by new one", "#", :id => "password_enable" %>
  </div>
</div>

<div class="clearfix">
  <%= form.label :authentication_token %>
  <div class="input">
    <span class="uneditable-input"><%= @admin.authentication_token %></span>
  </div>
</div>

<div class="clearfix">
  <%= form.label :active %>
  <div class="input">
    <%= form.check_box :active %>
    <span>Yes, admin account is active</span>
  </div>
</div>
