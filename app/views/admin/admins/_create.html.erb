<div class="clearfix">
  <%= create.label :domain %>
  <div class="input">
    <%= create.collection_select :domain_id, Domain.all, :id, :title, {} %>
  </div>
</div>

<div class="clearfix">
  <%= create.label :login %>
  <div class="input">
    <%= create.text_field :login, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= create.label :email %>
  <div class="input">
    <%= create.email_field :email, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= create.label :password %>
  <div class="input">
    <%= create.text_field :password, :size => 30 %>
  </div>
</div>

<div class="clearfix">
  <%= create.label :active %>
  <div class="input">
    <%= create.check_box :active %>
    <span>Yes, admin account is active</span>
  </div>
</div>
